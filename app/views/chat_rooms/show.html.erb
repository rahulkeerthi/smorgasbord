<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="chat-header">
      <h4><%= @chat_room.name %></h4>
    </div>
    <div class="messages" data-chatroom-id="<%= @chat_room.id %>">
      <% @chat_room.messages.each do |message| %>
        <%= render "messages/message", message: message, user_is_messages_author: current_user == message.user %>
      <% end %>
    </div>
    <div class="create-message">
      <%= simple_form_for [@chat_room, @message], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "Send a message" %>
      <% end %>
    </div>
  </div>
</div>
